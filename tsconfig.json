{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": false,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "types": [
      "node",
      "chrome",
      "vitest/globals"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "public"],
  "exclude": ["node_modules"],
}
