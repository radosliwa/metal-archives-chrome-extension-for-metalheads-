{
    "name": "metalArchives searchbar",
    "version": "0.1",
    "description": "search for bands and albums",
    "manifest_version": 2,
    "permissions": [
        "storage"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "images/wolf.png",
        "default_popup": "index.html"
    },
    "icons": {
        "16": "images/wolf.png",
        "32": "images/wolf.png",
        "72": "images/wolf.png",
        "96": "images/wolf.png"
    },
    "content_scripts": [{
        "matches": ["https://www.metal-archives.com/"],
        "all_frames": true,
        "js": ["js/main.js"]
    }]
}