{
    "name": "metal archives search",
    "version": "2",
    "description": "search for bands and albums",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "tabs",
        "activeTab"
    ],
    "action": {
        "default_icon": "wolf.png",
        "default_popup": "index.html"
    },
    "icons": {
        "16": "wolf.png",
        "32": "wolf.png",
        "72": "wolf.png",
        "96": "wolf.png"
    },
    "content_scripts": [{
        "js": ["public/content_scripts.js"],
        "matches": ["https://www.metal-archives.com/"]
    }]
}