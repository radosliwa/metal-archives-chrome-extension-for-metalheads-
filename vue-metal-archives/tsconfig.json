{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": false,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": false,
  },
  "include": ["src/*", "public/content_scripts.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
