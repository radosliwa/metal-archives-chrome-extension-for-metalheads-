{
    "name": "metal-archives-search",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "dev": "vite --port 5000",
        "build-app": "vue-tsc --noEmit && vite build",
        "build-cs": "npx tsc -p tsconfig.node.json --skipLibCheck ",
        "build": "rm -rf dist && npm run build-app && npm run build-cs",
        "preview": "vite preview",
        "lint": "eslint -c .eslintrc.js \"**/*.{vue,ts,js}\"",
        "lint:fix": "eslint -c .eslintrc.js \"**/*.{vue,ts,js}\" --fix",
        "test": "vitest run --watch",
        "coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@types/es6-promise": "^3.3.0",
        "eslint-plugin-sort-exports": "^0.8.0",
        "vue": "^3.3.6"
    },
    "devDependencies": {
        "@types/chrome": "0.0.179",
        "@types/node": "^18.18.5",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "@vitejs/plugin-vue": "^4.4.0",
        "@vitest/coverage-istanbul": "^0.27.3",
        "@vue/eslint-config-typescript": "^10.0.0",
        "@vue/test-utils": "^2.4.1",
        "@vueuse/core": "^9.13.0",
        "autoprefixer": "^10.4.16",
        "eslint": "^8.51.0",
        "eslint-plugin-vue": "^9.17.0",
        "husky": "^8.0.3",
        "jsdom": "^21.1.2",
        "path": "^0.12.7",
        "postcss": "^8.4.31",
        "sass": "^1.69.3",
        "tailwindcss": "^3.3.3",
        "typescript": "^4.9.5",
        "vite": "^4.4.11",
        "vite-svg-loader": "^3.6.0",
        "vitest": "^0.28.5",
        "vue-tsc": "^0.34.7"
    }
}
